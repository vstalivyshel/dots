#!/bin/env bash

find_dirs=""
find_dirs+="$HOME/.config/helix "
find_dirs+="$HOME/.config/fish "
find_dirs+="$HOME/.config/nvim "
find_dirs+="$HOME/.config/i3 "
find_dirs+="$HOME/.config/i3status "
find_dirs+="$HOME/.config/wezterm "
find_dirs+="$HOME/.local/bin "

selected=$(find $find_dirs -maxdepth 0 -type d | fzf)

if [[ -z $selected ]]; then
	exit 0
fi

cd $selected; $EDITOR