#!/bin/env bash

themes=""

themes+="rebecca\n"
themes+="rose-pine\n"
themes+="rose-pine-dawn\n"
themes+="Gruvbox light, soft (base16)\n"
themes+="kanagawa (Gogh)\n"

selected=$(printf "$themes" | fzf)

if [[ -z $selected ]]; then
  exit 0
fi

color_file=$HOME/.config/wezterm/selected_color.lua
cat << EOF > "$color_file"
return "$selected"
EOF
