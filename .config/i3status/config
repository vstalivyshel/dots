# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
        interval = 5
      	#color_good = "#a3be8c"
     	#color_degraded = "#ebcb8b"
      	#color_bad = "#bf616a"
      	interval = 1
	separator = "|"
	
}

order += "wireless _first_"
order += "ethernet _first_"
#order += "battery all"
#order += "disk /"
order += "cpu_usage"
#order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid)"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "Mem: %used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

#CPU
cpu_usage {
	format = "CPU: %usage"
}

#Volume
volume master {
format = "<3: %volume"
format_muted = "</3"
}

